<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff222222" />
            <stroke android:width="0.5dip" android:color="@color/comment_line_night" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="@color/comment_line_night" />
            <gradient android:startColor="#ff222222" android:endColor="#ff1a1a1a" android:angle="270.0" />
        </shape>
    </item>
</selector>